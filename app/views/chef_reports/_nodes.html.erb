<% if reports.any? %>
<h2 id="<%= name %>">
  <%= name.humanize %>
</h2>
<table>
    <tr>
      <th>Node name</th>
      <th>Last seen</th>
      <th>Remove</th>
    </tr>
    <% reports.each do |report| %>
      <tr>
        <td><%= report.node %></td>
        <td><%= friendly_time report.updated_at %> ago</td>
        <td><%= link_to 'Remove', report, :confirm => name == 'offline' ? nil : "Are you sure you want to remove node #{report.node}?", :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<% end %>
